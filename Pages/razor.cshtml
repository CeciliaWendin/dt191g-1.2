@page
@{

    ViewData["Title"] = "dt191g | Om Razor";
    DayOfWeek wk = DateTime.Today.DayOfWeek;

    var date = DateTime.Now.ToString("yyyy-MM-dd");
    var time = DateTime.Now.ToString("HH:mm:ss");

    string[] courses = { "DT162G JavaScriptbaserad webbutveckling", "DT191G, Webbutveckling med .NET", "DT140G Självständigt arbete" };
}
<div class="main">
    <h1>Razor</h1>

    <h2>Information</h2>

    <h3>Datum/klockslag</h3>
    @date @time

    <br />
    <br />
    @if (wk == DayOfWeek.Monday)
    {
        <p>Idag är det måndag.</p>
    }
    else
    {
        <p>Idag är det inte måndag.</p>
    }
    <h3>Kurser läsåret 2021-2022</h3>
    <ol>
        @foreach (var course in courses)
        {
            <li>@course</li>
        }
    </ol>
</div>

